---
import Logotype from "../components/Logotype.astro";
import BaseLayout from "./Base.astro";
import classnames from "classnames";

const { title } = Astro.props;
const path = new URL(Astro.request.url).pathname;
---

<BaseLayout {title}>
  <div class="w-64 flex-col fixed inset-y-0 bg-slate-800">
    <div class="flex-1 space-y-4 pt-5 pb-5 h-full overflow-y-auto">
      <div class="flex items-center flex-shrink-0 px-4"><Logotype /></div>

      <nav class="flex-1 px-2 space-y-2" aria-label="Sidebar">
        <div>
          <a
            href="/docs"
            class={classnames(
              "flex space-x-3 items-center p-2 text-slate-100 hover:text-orange-100 hover:bg-orange-900 group w-full text-sm font-medium rounded-md",
              path === "/docs" && "bg-slate-900"
            )}
          >
            <i class="fa-duotone fa-house h-5"></i>
            <span>Introduction</span>
          </a>
        </div>

        <div class="space-y-1">
          <a
            href="/docs/start"
            class={classnames(
              "flex space-x-3 items-center text-slate-100 hover:text-orange-100 hover:bg-orange-900 group w-full p-2 text-left text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500",
              path === "/docs/start" ? "bg-slate-900" : "bg-slate-700"
            )}
          >
            <i class="fa-duotone fa-rocket-launch h-5"></i>
            <span class="flex-1">Start</span>
          </a>

          <div class="space-y-1" id="sub-menu-1">
